<% if not Programs::FutureFaculty::Enrollment.find( @participant ).nil? %>
    <% if @participant.future_faculty_progress_status_id == 2 %>

        <%= link_to( "Graduate from Future Faculty",
                    graduate_participant_future_faculty_program_url( @participant ),
                    data: { confirm: "Are you sure?" },
                    class: ['boxy', 'hide-if-enrolled-in-future-faculty'],
                    method: :patch ) %>
    <% elsif @participant.future_faculty_progress_status_id == 1 %>
        <%= link_to( "Drop from Future Faculty",
                    drop_participant_future_faculty_program_url( @participant ),
                    data: { confirm: "Are you sure?" },
                    class: ['boxy', 'hide-if-enrolled-in-future-faculty'],
                    method: :patch ) %>
        <%= link_to( "Force-Graduate from Future Faculty",
                    graduate_participant_future_faculty_program_url( @participant ),
                    data: { confirm: "Are you sure?" },
                    class: ['boxy', 'hide-if-enrolled-in-future-faculty'],
                    method: :patch ) %>
    <% elsif @participant.future_faculty_progress_status_id == 4 %>
        <%= link_to( "Re-Enroll into Future Faculty",
                    reenroll_participant_future_faculty_program_url( @participant ),
                    data: { confirm: "Are you sure?" },
                    class: ['boxy', 'hide-if-enrolled-in-future-faculty'],
                    method: :patch ) %>
    <% end %>
<% end %>
