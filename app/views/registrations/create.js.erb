$('.seminar-listing form').bind('ajax:complete', function() {  
    <% @new_seminars.each do |s| %>
      $("#register_seminar_<%= s %>").fadeOut(300);
      $("#register_seminar_<%= s %>").parent().children('p.destroy').html("<%= escape_javascript( link_to 'Cancel Request', current_user.registration_for( Seminar.find(s) ), :method => :delete, :class => 'delete-registration'  ) %>");
    <% end %>

$('.delete-registration').bind( 'click',
  function() {
    $(this).fadeOut(300).html("Registration Canceled").fadeIn(300)
  });


});

