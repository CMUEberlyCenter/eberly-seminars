<!DOCTYPE html>
<html>
<head>
  <title><%= @page_title ? "#{@page_title} - " : '' %>
    Graduate Student Services - Eberly Center - Carnegie Mellon University</title>
  <%= stylesheet_link_tag 'application', :media => "all" %>
  <link href="//fonts.googleapis.com/css?family=Open+Sans:400,300" rel="stylesheet" type="text/css">
  <%= content_for?(:stylesheets) ? yield(:stylesheets) : '' %>

  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="impersonate_participant">

    
    <p>Demo Helper</p>
    <div class="impersonate-widget">
      <ul>
	<li>
	  <img alt="Face" src="/assets/face.png" /><%= link_to 'No One', impersonate_login_url('nobody') %>
	  <p>Before login.</p>
	</li>

	<li>
	  <img alt="Face" src="/assets/face.png" /><%= link_to 'Ruth Poproski', impersonate_login_url('rpoprosk') %>
	  <p>A graduate student.</p>
	</li>

	<li>
	  <img alt="Face" src="/assets/face.png" /><%= link_to 'Judy Brooks', impersonate_login_url('jmbrooks') %>
	  <p>An administrator.</p>
	</li>
    </div>
    <% if not session[:participant_id] %>
    <p>You are viewing this page as: No one logged in | <%= link_to "change", '#', :onclick => "switchUser()" %></p>
    <% else %>
    <p>You are viewing this page as: <%= current_user.name %> | <%= link_to "change", '#', :onclick => "switchUser()" %></p>
    <% end %>

    <script>
      function switchUser() {
        $('#impersonate_participant p a').attr( 'onclick', "cancelSwitch()" );
        $('#impersonate_participant p a').html('cancel');
        $('.impersonate-widget').slideDown();
      }
      function cancelSwitch() { 
        $('#impersonate_participant p a').attr( 'onclick', "switchUser()" );
        $('#impersonate_participant p a').html('change');
        $('.impersonate-widget').slideUp();
      }

    </script>    
  </div>


  <div id="cmu_bar">
    <%= link_to( image_tag( 'carnegie-mellon-wordmark.gif', :alt => 'Carnegie Mellon Wordmark'), "http://www.cmu.edu" ) %>
  </div>
    <% if current_user and current_user.is_admin %>
    <div id="admin_nav">
      <%= link_to "View Seminars", admin_seminars_url %> | 
      <%= link_to "Create New Seminar", new_admin_seminar_url %>
      
    </div>
    <% end %>

  <header id="page_header">
    
    
    <section id="banner">
      <%= image_tag('eberly-wordmark.png', :alt => 'Eberly Wordmark', :class => 'wordmark') %>
      <h1>Graduate Student Services</h1>
    </section>
    
    <section id="search">
      <form>
      <input type="text" />
      <input type="image" src="/assets/search-icon.png" value="Search" alt="Search" />
      </form>    
    </section>

  </header>

  <%= render "shared/account" %>
  
  <section id="content" role="main">
    <div id="flash"><%= flash[:notice] %></div>

    <%= yield %>
  </section>

  <footer id="page_footer" role="contentinfo">
    <nav>
      <ul>
	<li><a href="http://www.cmu.edu/eberly">Eberly Center for Teaching Excellence</a></li>
	<li><a href="http://www.cmu.edu/teaching">http://www.cmu.edu/teaching</a></li>
	<li><a href="tel:1-412-268-2896">(412) 268-2896</a></li>
      </ul>
    </nav>
  </footer>


</body>
</html>
