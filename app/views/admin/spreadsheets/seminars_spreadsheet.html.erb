<table id="seminars-spreadsheet" class="spreadsheet">

  <thead>
    <tr>
      <th>Title</th>
      <th>Status</th>
      <th>Description</th>
      <th>Registrations</th>
    </tr>
  </thead>

  <tbody>
    <% @seminars.each do |s| %>
    <tr>
      <td><%= s.title %></td>
      <td><%= s.status %></td>
      
      <td class="truncate">
	<div class="preview">
	  <%= truncate s.description, :length => 40 %>
	</div>
	<div class="truncated">
	  <%= s.description %>
	  <%= link_to 'hide', '#', :class => 'hide-text' %>
	</div>
      </td>

      <td>
	<%= link_to s.registrations.size, admin_seminar_path( s ) %>
      </td>
    </tr>
    <% end %>
  </tbody>

</table>
