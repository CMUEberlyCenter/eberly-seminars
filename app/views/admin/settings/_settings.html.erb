<div class="panel panel-default">
    
    <div class="panel-heading">
        <h1 class="panel-title">Application-wide Settings</h1>
    </div>
    
    <div class="panel-body">

        <table class="table table-striped">
            <% @settings.each do |setting| %>
                
                <tr>
                    <td>
                        <%= form_for [:admin, setting] do |f| %>
                            <%= f.label :value, setting.label %>: <%= f.text_field :value %>
                            
                            <%= f.submit "Update setting" %>
                        <% end %>                                    
                    </td>
                </tr>
                
            <% end %>                        
            </table>
            
    </div><!-- panel-body -->
</div><!-- panel -->

