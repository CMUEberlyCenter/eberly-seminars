<section class="portfolio">
  <h1>Future Faculty Portfolio</h1>

  <%= image_tag "face.png" %>
  <h2><%= current_user.name %></h2>

  <section class="portfolio-dialog seminars">
    <h1>Seminars</h1>
    <% if @attended_seminars.size > 0 %>
      <% @attended_seminars.each do |r| %>
        <ul>
          <li>
	    <h2><%= r.seminar.title %></h2>
	    <p class="date"><%= raw r.seminar.formatted_timespan_short %></p>
	  </li>
        </ul>
      <% end %>

    <% else %>
      <p>You have not attended any seminars.</p>
    <% end %>
  </section>

  <section class="portfolio-dialog observations">
    <h1>Observations</h1>
    <p>
      No observations available.
    </p>
  </section>

  <section class="portfolio-dialog syllabus-project">
    <h1>Syllabus Project</h1>
    <p>
      No syllabus projects available.
    </p>
  </section>

  <section class="portfolio-dialog individual-project">
    <h1>Individual Project</h1>
    <p>
      No individual projects available.
    </p>
  </section>


  <div class="export-portfolio">
    <%= link_to "Export Portfolio [pdf]", "assets/teaching-development-transcript-bg.pdf" %>
  </div>
</section>

