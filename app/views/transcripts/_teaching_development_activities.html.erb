<%
   if @participant.registrations
   @attended_seminars = @participant.registrations.credited
   end
%>

<section class="transcript">
  <h1>Teaching Development Transcript<div style="float: right;">
      <a href="<%= "/future-faculty/#{@participant.andrewid}" %>" style="border: 1px solid white; color: white; font-size: 14px; font-weight: normal; padding: 3px 10px;text-decoration: none;">Enroll in Future Faculty</a></div></h1>

  <%= image_tag "face.png" %>
  <h2><%= @participant.name %></h2>

  <section class="transcript-dialog seminars">
    <h1>Seminars</h1>
    <% if @attended_seminars.size > 0 %>
      <% @attended_seminars.each do |r| %>
        <ul>
          <li>
	    <h2><%= r.seminar.title %></h2>
	    <p class="date"><%= raw r.seminar.formatted_timespan_short %></p>
	  </li>
        </ul>
      <% end %>

    <% else %>
      <p>You have not attended any seminars.</p>
    <% end %>
  </section>

  <section class="transcript-dialog observations">
    <h1>Observations</h1>
    <p>
      No observations available.
    </p>
  </section>

  <section class="transcript-dialog syllabus-project">
    <h1>Syllabus Project</h1>
    <p>
      No syllabus projects available.
    </p>
  </section>

  <section class="transcript-dialog individual-project">
    <h1>Individual Project</h1>
    <p>
      No individual projects available.
    </p>
  </section>


  <div class="export-transcript">
    <%= link_to "Export Transcript [pdf]", participant_transcript_url(:participant_id => @participant.andrewid, :format => "pdf") %>
  </div>
</section>

